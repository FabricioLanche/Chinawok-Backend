# ============================================================
# CHINAWOK BACKEND - CONFIGURACIÓN CENTRALIZADA
# ============================================================
# Este archivo contiene todas las variables de entorno necesarias
# para desplegar todos los microservicios del backend de ChinaWok
# ============================================================

# ------------------------------------------------------------
# AWS CONFIGURATION (GLOBAL)
# ------------------------------------------------------------
# Las credenciales de AWS deben estar configuradas en ~/.aws/credentials con el formato:
# [default]
# aws_access_key_id=YOUR_ACCESS_KEY_ID
# aws_secret_access_key=YOUR_SECRET_ACCESS_KEY
# aws_session_token=YOUR_SESSION_TOKEN (opcional)
# region=us-east-1 (opcional, por defecto: us-east-1)

# Tu AWS Account ID (12 dígitos) - Obtener con: aws sts get-caller-identity --query Account --output text
AWS_ACCOUNT_ID=123456789012

# AWS Region
AWS_REGION=us-east-1

# ------------------------------------------------------------
# DYNAMODB TABLE NAMES (GLOBAL)
# ------------------------------------------------------------
TABLE_LOCALES=ChinaWok-Locales
TABLE_USUARIOS=ChinaWok-Usuarios
TABLE_PRODUCTOS=ChinaWok-Productos
TABLE_EMPLEADOS=ChinaWok-Empleados
TABLE_COMBOS=ChinaWok-Combos
TABLE_PEDIDOS=ChinaWok-Pedidos
TABLE_OFERTAS=ChinaWok-Ofertas
TABLE_RESENAS=ChinaWok-Resenas

# ------------------------------------------------------------
# USUARIOS - JWT CONFIGURATION
# ------------------------------------------------------------
JWT_SECRET=ee49fe5fa0cb8fcd8d834251f92801af
JWT_EXPIRATION_HOURS=24

# ------------------------------------------------------------
# DATA GENERATOR - ADMIN CREDENTIALS
# ------------------------------------------------------------
# Usuario único con rol Admin - Administrador de toda la plataforma
ADMIN_NOMBRE=Administrador
ADMIN_APELLIDO=General
ADMIN_EMAIL=admin@chinawok.pe
ADMIN_PASSWORD=AdminChinaWok2024!
ADMIN_TELEFONO=+51999999999

# ------------------------------------------------------------
# PEDIDOS - EVENTBRIDGE & STEP FUNCTIONS
# ------------------------------------------------------------
# Step Function para procesar pedidos (solo el nombre)
STEP_FUNCTION_PEDIDOS_NAME=ChinaWok-Pedidos-Processor

# EventBridge
EVENT_BUS_NAME=chinawok-pedidos-events

# ------------------------------------------------------------
# STEP FUNCTIONS - WORKFLOW CONFIGURATION
# ------------------------------------------------------------
# MODO_REALISTA=true para tiempos reales de producción
# MODO_REALISTA=false para tiempos reducidos en demos/presentaciones
MODO_REALISTA=false

# ------------------------------------------------------------
# SERVERLESS FRAMEWORK CONFIGURATION
# ------------------------------------------------------------
# Organización de Serverless Framework
SERVERLESS_ORG=flanche
